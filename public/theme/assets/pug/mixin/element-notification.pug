mixin  notification(data)
  ul 
    each item in data
        li(class="notification d-flex w-100 justify-content-between align-items-center")
          div(class="d-flex w-100 notification-data justify-content-center align-items-center gap-2")
            div(class="user-alerts").flex-shrink-0
              img(class="rounded-circle img-fluid img-40" src=`../assets/images/dashboard/user/${item.image}` alt=`user`)
            div.flex-grow-1
              div(class="common-space user-id w-100")
                  div.common-space.w-100 
                      a(href="../template/private-chat.html" class="f-w-500 f-12")=item.name
              div
                span(class="f-w-500 f-light f-12")=item.appName 
            span(class="f-light f-w-500 f-12")=item.notificationTime 
